<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            background-image: url("background3.jpg");
            background-repeat: no-repeat;
            background-size: 100%;
        }

        h1 {
            color: white;
            text-align: center;
            -webkit-text-stroke: 1px blue;
        }
        /* General Styling */
        body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        background-color: #f9f9f9;
        color: #fff;
        margin: 0;
        padding: 0;
        }

        /* Search Results Container */
        .search-results {
        max-width: 1200px;
        margin: 20px auto;
        padding: 15px;
        }

        /* Results Grid */
        .results-grid {
        display: flex;
        flex-direction: column;
        gap: 20px;
        }

        /* Clickable Result Card */
        .result-card {
        display: flex;
        align-items: center;
        background: #333; /* Dark gray background */
        color: #fff; /* White text for contrast */
        text-decoration: none; /* Removes underline for links */
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        transition: transform 0.2s, box-shadow 0.2s;
        padding: 15px; /* Add padding inside the card */
        }

        .result-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
        text-decoration: none; /* Prevent underlining */
        }

        .result-card:hover .result-title {
        text-decoration: underline;
        text-decoration-thickness: 2px; /* Thicker underline */
        text-decoration-color: #fff; /* Custom underline color */
        }

        /* Content Section */
        .result-content {
        flex: 1;
        padding-right: 15px; /* Add spacing between content and image */
        }

        .result-title {
        font-size: 1.5em;
        margin: 0 0 10px;
        }

        .result-description {
        font-size: 1em;
        color: #ccc; /* Slightly lighter for better readability */
        margin: 0 0 10px;
        }

        .result-category {
        font-size: 0.9em;
        color: #aaa; /* Subtle category color */
        }

        /* Image Section */
        .result-image-container {
        width: 150px; /* Smaller width for the image */
        height: 100px; /* Adjust height as needed */
        overflow: hidden;
        margin-left: 15px; /* Add padding to the left of the image */
        flex-shrink: 0; /* Prevent shrinking of the image container */
        display: flex; /* Center the image */
        align-items: center;
        justify-content: center;
        }

        .result-image {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover; /* Ensures image fits without distortion */
        display: block;
        }

        /* No Results Message */
        .no-results-message {
        text-align: center;
        font-size: 1.2em;
        color: #888;
        padding: 20px;
        background: #444;
        border: 1px solid #555;
        border-radius: 8px;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Search Results</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <a class="navbar-brand" style="color: rgb(191, 255, 161)">Search Results</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            <form method="POST" action='/search' class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" name="Search" type="search" placeholder="Search"
                    aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="search-results">
        <% if (destinations && destinations.length > 0) { %>
          <div class="results-grid">
            <% destinations.forEach(dest => { %>
              <!-- Link to another EJS file based on pageTitle -->
              <a href="/<%= dest.pageTitle %>" class="result-card">
                <div class="result-content">
                  <h2 class="result-title"><%= dest.name %></h2>
                  <p class="result-description"><%= dest.description %></p>
                  <p class="result-category"><strong>Category:</strong> <%= dest.category %></p>
                </div>
                <div class="result-image-container">
                  <img class="result-image" src="<%= dest.image %>" alt="<%= dest.name %>">
                </div>
              </a>
            <% }) %>
          </div>
        <% } else { %>
          <p class="no-results-message">No destinations found. Try refining your search criteria.</p>
        <% } %>
      </div>               
</body>
</html>